<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600">
    <DockPanel LastChildFill="False">
        <Label DockPanel.Dock="Top" HorizontalContentAlignment="Center">Label</Label>
        <TextBox DockPanel.Dock="Left" Width="220">TextBox</TextBox>
        <TextBox DockPanel.Dock="Right" Width="220">TextBox</TextBox>
        <Button DockPanel.Dock="Bottom" Margin="10 40">Button</Button>
    </DockPanel>
</Window>